<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group04.fitnessmobileapp.ProfileActivity">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="AVATAR!!"
        android:id="@+id/avatar"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name :"
        android:ems="10"
        android:id="@+id/nameTitle"
        android:layout_alignBottom="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/title"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Dr."
        android:ems="10"
        android:id="@+id/title"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/avatar"
        android:layout_alignLeft="@+id/avatar"
        android:layout_alignStart="@+id/avatar"
        android:layout_alignRight="@+id/avatar"
        android:layout_alignEnd="@+id/avatar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Wells"
        android:ems="10"
        android:layout_toRightOf="@+id/title"
        android:id="@+id/name"
        android:layout_alignBottom="@+id/title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="DOB :"
        android:ems="10"
        android:layout_below="@+id/nameTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/birthTitle"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/nameTitle"
        android:layout_toRightOf="@+id/birthTitle"
        android:id="@+id/birth"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="11.11.1985" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Height :"
        android:ems="10"
        android:layout_below="@+id/birthTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/heightTitle"
        android:layout_toLeftOf="@+id/birth"
        android:layout_toStartOf="@+id/birth" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/birthTitle"
        android:layout_toRightOf="@+id/birthTitle"
        android:id="@+id/height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="185cm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Weight :"
        android:ems="10"
        android:id="@+id/weightTitle"
        android:layout_below="@+id/heightTitle"
        android:layout_toStartOf="@+id/height"
        android:layout_toLeftOf="@+id/height" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weight"
        android:layout_alignBaseline="@+id/weightTitle"
        android:layout_alignBottom="@+id/weightTitle"
        android:layout_toRightOf="@+id/heightTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="75kg" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Gender :"
        android:ems="10"
        android:layout_below="@+id/weightTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/genderTitle"
        android:layout_toLeftOf="@+id/weight"
        android:layout_toStartOf="@+id/weight" />

    <RadioButton
        android:text="Male        "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maleRadioButton"
        android:layout_below="@+id/weight"
        android:layout_alignBottom="@+id/genderTitle"
        android:layout_toLeftOf="@+id/name"
        android:layout_toRightOf="@+id/weightTitle"
        android:layout_toEndOf="@+id/weightTitle" />

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FemaleRadioButton"
        android:duplicateParentState="false"
        android:layout_below="@+id/weight"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title"
        android:layout_alignBottom="@+id/maleRadioButton" />

</RelativeLayout>
