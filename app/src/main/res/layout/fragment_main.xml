<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="group04.fitnessmobileapp.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/instruction"
        android:layout_width="1000dp"
        android:layout_height="20dp"
        android:text="Please wear sensors"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:id="@+id/body"
        android:layout_width="1000dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/body" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Search Sensor"
        android:id="@+id/button"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/round_button"
        android:onClick="searchSensor" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Start!"
        android:id="@+id/startButton"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/round_button"
        android:onClick="showTrainingProgram"
        android:visibility="gone"/>

    <Button
        android:id="@+id/popupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=":" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:id="@+id/data"
        android:text="read data" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text=""
        android:id="@+id/sensor1"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/sensor_on_body" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text=""
        android:id="@+id/sensor2"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="153dp"
        android:background="@drawable/sensor_on_body" />

    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text=""
        android:id="@+id/sensor3"
        android:layout_marginLeft="173dp"
        android:layout_marginTop="235dp"
        android:background="@drawable/sensor_on_body" />

    <ProgressBar
        android:id="@+id/progress_bar_1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="122dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar_2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="145dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ProgressBar
        android:id="@+id/progress_bar_3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="166dp"
        android:layout_marginTop="228dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:id="@+id/bluetooth_device_list"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="read data"
        android:id="@+id/read_data"
        android:layout_marginLeft="20dp"
        android:background="@drawable/round_button"
        android:onClick="readData"
        android:layout_marginTop="350dp"/>

</RelativeLayout>
